<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?android:attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_rank_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="1"
        app:layout_constraintBottom_toBottomOf="@+id/iv_singer_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_singer_icon" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_singer_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/ic_singer_default"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_rank_num"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_singer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/iv_singer_icon"
        app:layout_constraintTop_toTopOf="@+id/iv_singer_icon"
        tools:text="歌手名" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="热度:"
        android:textColor="@color/qmui_config_color_gray_6"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_singer_icon"
        app:layout_constraintStart_toStartOf="@+id/tv_singer_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_singer_name"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tv_hot_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/qmui_config_color_gray_6"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView4"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toTopOf="@+id/textView4"
        tools:text="1万" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=",粉丝数:"
        android:textColor="@color/qmui_config_color_gray_6"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_hot_num"
        app:layout_constraintStart_toEndOf="@+id/tv_hot_num"
        app:layout_constraintTop_toTopOf="@+id/tv_hot_num" />

    <TextView
        android:id="@+id/tv_fans_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/qmui_config_color_gray_6"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView6"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toTopOf="@+id/textView6"
        tools:text="1万" />
</android.support.constraint.ConstraintLayout>